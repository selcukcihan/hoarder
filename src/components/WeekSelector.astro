---
import { getWeekStartDate } from '../lib/utils';

interface Props {
  currentWeek: string;
  weeks: string[];
}

const { currentWeek, weeks } = Astro.props;
const todayWeekStart = getWeekStartDate();

function formatWeekLabel(weekDate: string): string {
  const date = new Date(weekDate);
  const month = date.toLocaleString('default', { month: 'short' });
  const day = date.getDate();
  const year = date.getFullYear();
  return `${month} ${day}, ${year}`;
}
---

<div class="week-selector">
  <label for="week-select">Select Week:</label>
  <select id="week-select" onchange="window.location.href = this.value">
    <option value="/" selected={currentWeek === todayWeekStart}>
      Current Week
    </option>
    {weeks.map((week) => (
      <option value={`/${week}`} selected={week === currentWeek}>
        {formatWeekLabel(week)}
      </option>
    ))}
  </select>
</div>

<style>
  .week-selector {
    margin-bottom: 0;
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: 8px;
    box-shadow: 0 2px 4px var(--shadow);
    transition: background-color 0.3s ease;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--text-primary);
    transition: color 0.3s ease;
  }

  select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    font-size: 1rem;
    background: var(--bg-primary);
    color: var(--text-primary);
    cursor: pointer;
    transition: border-color 0.2s, background-color 0.3s ease, color 0.3s ease;
  }

  select:hover {
    border-color: var(--text-tertiary);
  }

  select:focus {
    outline: none;
    border-color: var(--link-color);
    box-shadow: 0 0 0 3px rgba(74, 158, 255, 0.1);
  }
</style>

