---
import type { ArticleWithTags } from '../types/article';
import { generatePlaceholderImage } from '../lib/utils';

interface Props {
  article: ArticleWithTags;
}

const { article } = Astro.props;
const placeholderImage = generatePlaceholderImage(article.title, 200, 150);
---

<article class="article-card">
  {article.thumbnail_url && (
    <a href={`/${article.slug}`} class="thumbnail-link">
      <img
        src={article.thumbnail_url}
        alt={article.title}
        class="thumbnail"
        loading="lazy"
        referrerpolicy="no-referrer"
        data-placeholder={placeholderImage}
        data-title={article.title}
      />
    </a>
  )}
  <div class="content">
    <h2 class="title">
      <a href={`/${article.slug}`}>{article.title}</a>
    </h2>
    <p class="summary">{article.short_summary}</p>
    <div class="meta">
      <a href={article.url} target="_blank" rel="noopener noreferrer" class="original-link">
        View Original â†’
      </a>
      {article.tags.length > 0 && (
        <div class="tags">
          {article.tags.map((tag) => (
            <a href={`/?tag=${tag.name}`} class="tag">{tag.name}</a>
          ))}
        </div>
      )}
    </div>
  </div>
</article>

<style>
  .article-card {
    background: var(--bg-secondary);
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 4px var(--shadow);
    display: flex;
    gap: 1.5rem;
    transition: box-shadow 0.2s, background-color 0.3s ease;
  }

  .article-card:hover {
    box-shadow: 0 4px 8px var(--shadow-hover);
  }

  .thumbnail-link {
    flex-shrink: 0;
    display: block;
  }

  .thumbnail {
    width: 200px;
    height: 150px;
    object-fit: cover;
    border-radius: 4px;
  }

  .content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .title {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .title a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .title a:hover {
    color: var(--link-hover);
  }

  .summary {
    color: var(--text-secondary);
    margin: 0 0 1rem 0;
    flex: 1;
    transition: color 0.3s ease;
  }

  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .original-link {
    color: var(--link-color);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .original-link:hover {
    text-decoration: underline;
    color: var(--link-hover);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--tag-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: background 0.2s, color 0.3s ease;
  }

  .tag:hover {
    background: var(--tag-hover);
  }

  @media (max-width: 768px) {
    .article-card {
      flex-direction: column;
    }

    .thumbnail {
      width: 100%;
      height: auto;
      max-height: 200px;
    }
  }
</style>

<script>
  // Minimum image dimensions (width or height) to consider valid
  const MIN_IMAGE_SIZE = 100;

  // Check if an image is too small and replace with placeholder if needed
  function checkImageSize(img: HTMLImageElement) {
    const naturalWidth = img.naturalWidth;
    const naturalHeight = img.naturalHeight;
    
    // If image hasn't loaded yet or dimensions are 0, wait
    if (naturalWidth === 0 || naturalHeight === 0) {
      return;
    }

    // Check if image is too small
    if (naturalWidth < MIN_IMAGE_SIZE && naturalHeight < MIN_IMAGE_SIZE) {
      const placeholder = img.getAttribute('data-placeholder');
      const title = img.getAttribute('data-title') || '';
      
      if (placeholder) {
        img.src = placeholder;
        img.setAttribute('data-replaced', 'true');
      }
    }
  }

  // Check all thumbnail images on page load
  document.addEventListener('DOMContentLoaded', () => {
    const thumbnails = document.querySelectorAll<HTMLImageElement>('.article-card .thumbnail');
    
    thumbnails.forEach((img) => {
      // If image is already loaded, check immediately
      if (img.complete) {
        checkImageSize(img);
      } else {
        // Otherwise, wait for load event
        img.addEventListener('load', () => checkImageSize(img));
        img.addEventListener('error', () => {
          // If image fails to load, use placeholder
          const placeholder = img.getAttribute('data-placeholder');
          if (placeholder) {
            img.src = placeholder;
            img.setAttribute('data-replaced', 'true');
          }
        });
      }
    });
  });
</script>

