---
import type { ArticleWithTags } from '../types/article';
import { extractYouTubeVideoId, isYouTubeUrl, generatePlaceholderImage, truncateTitle } from '../lib/utils';

interface Props {
  article: ArticleWithTags;
}

const { article } = Astro.props;

// Check if this is a YouTube URL and extract video ID
const isYouTube = isYouTubeUrl(article.url);
const videoId = isYouTube ? extractYouTubeVideoId(article.url) : null;
const placeholderImage = generatePlaceholderImage(article.title, 200, 150);
const displayTitle = truncateTitle(article.title);
---

<article class="article-detail">
  <header class="article-header">
    <h1 class="title">{displayTitle}</h1>
    <div class="meta-info">
      <a href={article.url} target="_blank" rel="noopener noreferrer" class="original-link">
        View Original Article →
      </a>
      <span class="date">Archived on {new Date(article.created_at).toLocaleDateString()}</span>
    </div>
  </header>

  {videoId ? (
    <div class="video-container">
      <iframe
        src={`https://www.youtube.com/embed/${videoId}`}
        title={article.title}
        class="youtube-player"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        loading="lazy"
      ></iframe>
    </div>
  ) : article.thumbnail_url && (
    <div class="thumbnail-container">
      <img
        src={article.thumbnail_url}
        alt={article.title}
        class="thumbnail"
        loading="lazy"
        referrerpolicy="no-referrer"
        data-placeholder={placeholderImage}
        data-title={article.title}
      />
    </div>
  )}

  <div class="content">
    {article.extended_summary && (
      <section class="summary-section">
        <h2>Summary</h2>
        <p class="extended-summary">{article.extended_summary}</p>
      </section>
    )}

    {article.tags.length > 0 && (
      <section class="tags-section">
        <h2>Tags</h2>
        <div class="tags">
          {article.tags.map((tag) => (
            <a href={`/?tag=${tag.name}`} class="tag">{tag.name}</a>
          ))}
        </div>
      </section>
    )}

    {article.transcription && (
      <section class="transcription-section">
        <h2>Video Transcription</h2>
        <div class="transcription">
          {article.transcription.split('\n').map((paragraph) => (
            <p>{paragraph}</p>
          ))}
        </div>
      </section>
    )}
  </div>

  <nav class="article-nav">
    <a href={`/${article.week_start_date}`} class="back-link">
      ← Back to Week Archive
    </a>
  </nav>
</article>

<style>
  .article-detail {
    background: var(--bg-secondary);
    border-radius: 8px;
    padding: 2rem;
    box-shadow: 0 2px 4px var(--shadow);
    transition: background-color 0.3s ease;
    box-sizing: border-box;
    width: 100%;
    max-width: 100%;
    overflow-x: hidden;
  }

  .article-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border-color);
    transition: border-color 0.3s ease;
  }

  .title {
    font-size: 2rem;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
    transition: color 0.3s ease;
  }

  .meta-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .original-link {
    color: var(--link-color);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .original-link:hover {
    text-decoration: underline;
    color: var(--link-hover);
  }

  .date {
    color: var(--text-secondary);
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .thumbnail-container {
    margin-bottom: 2rem;
    text-align: center;
  }

  .thumbnail {
    max-width: 400px;
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 2px 8px var(--shadow);
    display: block;
    margin: 0 auto;
    box-sizing: border-box;
  }

  .video-container {
    margin-bottom: 2rem;
    position: relative;
    padding-bottom: 56.25%; /* 16:9 aspect ratio */
    height: 0;
    overflow: hidden;
    border-radius: 8px;
    box-shadow: 0 2px 8px var(--shadow);
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
  }

  .youtube-player {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .content {
    line-height: 1.8;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  .content section {
    margin-bottom: 2rem;
  }

  .content h2 {
    font-size: 1.5rem;
    margin: 0 0 1rem 0;
    color: var(--text-primary);
    border-bottom: 2px solid var(--border-color);
    padding-bottom: 0.5rem;
    transition: color 0.3s ease, border-color 0.3s ease;
  }

  .extended-summary {
    font-size: 1.1rem;
    color: var(--text-secondary);
    line-height: 1.8;
    transition: color 0.3s ease;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--tag-bg);
    padding: 0.5rem 1rem;
    border-radius: 16px;
    font-size: 0.9rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: background 0.2s, color 0.3s ease;
  }

  .tag:hover {
    background: var(--tag-hover);
  }

  .transcription {
    background: var(--bg-tertiary);
    padding: 1.5rem;
    border-radius: 4px;
    line-height: 1.8;
    transition: background-color 0.3s ease;
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  .transcription p {
    margin: 0 0 1rem 0;
    color: var(--text-primary);
    transition: color 0.3s ease;
  }

  .transcription p:last-child {
    margin-bottom: 0;
  }

  .article-nav {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
    transition: border-color 0.3s ease;
  }

  .back-link {
    color: var(--link-color);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    text-decoration: underline;
    color: var(--link-hover);
  }

  @media (max-width: 768px) {
    .article-detail {
      padding: 1rem;
      margin: 0;
      border-radius: 0;
    }

    .title {
      font-size: 1.5rem;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .meta-info {
      flex-direction: column;
      align-items: flex-start;
    }

    .content {
      overflow-x: hidden;
    }

    .content * {
      max-width: 100%;
      box-sizing: border-box;
    }
  }
</style>

<script>
  // Minimum image dimensions (width or height) to consider valid
  const MIN_IMAGE_SIZE = 100;

  // Check if an image is too small and replace with placeholder if needed
  function checkImageSize(img: HTMLImageElement) {
    const naturalWidth = img.naturalWidth;
    const naturalHeight = img.naturalHeight;
    
    // If image hasn't loaded yet or dimensions are 0, wait
    if (naturalWidth === 0 || naturalHeight === 0) {
      return;
    }

    // Check if image is too small
    if (naturalWidth < MIN_IMAGE_SIZE && naturalHeight < MIN_IMAGE_SIZE) {
      const placeholder = img.getAttribute('data-placeholder');
      const title = img.getAttribute('data-title') || '';
      
      if (placeholder) {
        img.src = placeholder;
        img.setAttribute('data-replaced', 'true');
      }
    }
  }

  // Check all thumbnail images on page load
  document.addEventListener('DOMContentLoaded', () => {
    const thumbnails = document.querySelectorAll<HTMLImageElement>('.article-detail .thumbnail');
    
    thumbnails.forEach((img) => {
      // If image is already loaded, check immediately
      if (img.complete) {
        checkImageSize(img);
      } else {
        // Otherwise, wait for load event
        img.addEventListener('load', () => checkImageSize(img));
        img.addEventListener('error', () => {
          // If image fails to load, use placeholder
          const placeholder = img.getAttribute('data-placeholder');
          if (placeholder) {
            img.src = placeholder;
            img.setAttribute('data-replaced', 'true');
          }
        });
      }
    });
  });
</script>

